<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--
    配置代码自动生成
-->
<generatorConfiguration>
    <!-- 配置mysql驱动的jar包路径(绝对路径) -->
    <classPathEntry
            location="E:\study tools\repository3.6.0\mysql\mysql-connector-java\5.1.38\mysql-connector-java-5.1.38.jar"/>

    <context id="xp_mysql" targetRuntime="MyBatis3">
        <!-- 为了防止生成的代码中有很多注释，比较难看，加入下面的配置控制注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://111.230.236.222:3306/yangml"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成数据表对应的model(pojo) -->
        <javaModelGenerator targetPackage="com.xp.vo" targetProject="E:\eclipse-workspace\SSM03-PARENT\SSM03-vo\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 生成mapper.xml映射配置文件 -->
        <sqlMapGenerator targetPackage="com.xp.mapper" targetProject="E:\eclipse-workspace\SSM03-PARENT\SSM03-dao\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成mapper -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.xp.dao" targetProject="E:\eclipse-workspace\SSM03-PARENT\SSM03-dao\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 要对那些数据表进行生成操作,必须要有一个,否则报错 -->
        <!-- product表生成Product对象 -->
        <table schema="Comment" tableName="comment" domainObjectName="Comment"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false">
        </table>

         <!--tbuser生成User对象 -->
        <table schema="User" tableName="tbuser" domainObjectName="User"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false">
        </table>
    </context>
</generatorConfiguration>